
<div class="col-md-8">
    <div class="card" id="add-control">
        <div class="header">
            <h4 class="title">Project Dependencies</h4>
            <p class="category">Add/Modify Dependency</p>
        </div>
        <div class="content">
            <form id="dependency-form">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="loading">Priority <star>*</star></label>
                            <select class="selectpicker form-control show-tick bs-select" title="Please Select" required="required" name="dependencypriority" id="dependencypriority">
                                <option name="Blocker">Blocker</option>
                                <option name="Critical">Critical</option>
                                <option name="Major">Major</option>
                                <option name="None">None</option>
                                <option name="Trivial">Trivial</option>
                                <option name="Low">Low</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="loading">Status <star>*</star></label>
                            <select name="dependencystatus" required="required" title="Please Select" class="selectpicker bootstrap-select form-control show-tick" id="dependencystatus">
                                <option name="Open">Open</option>
                                <option name="In Progress">In Progress</option>
                                <option name="Done">Done</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="loading">Assignee <star>*</star></label>
                            <input type="text" required="required" class="form-control" name="dependencyassignee" id="dependencyassignee" />
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="loading">Description <star>*</star></label>
                            <textarea type="text" required="required" name="dependencydesc" id="dependencydesc" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="loading">Affected Stories</label>
                            <input type="text" class="form-control bootstrap-tagsinput" id="tokenfield-typeahead" name="dependencystories" value="" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <input type="submit" id="submit" class="btn btn-primary btn-fill form-control" value="Add" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <input type="reset" id="cancel" class="btn btn-secondary btn-fill form-control hidden" value="Cancel" />
                            <input type="hidden" id="dependencyid" value="" name="dependencyid" />
                        </div>
                    </div>
                   
                </div>
            </form>
        </div>
    </div>
    
</div>  

     <div class="col-md-4">
        <div class="card storyreferencepanel">
            <div class="header">
                <h4 class="title">Story Reference</h4>
                <p class="category">Quick Story Lookup</p>
            </div>
            <div class="content table-responsive table-full-width" style="margin-right: 0px; padding-right: 0px;">
                <table id="dependencies-storyref-bootstrap-table" class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-1" data-field="storyjiraref" data-sortable="true" data-formatter="storyFormat">Ref</th>
                            <th class="col-md-6" data-field="storydesc" data-sortable="true">Summary</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="footer"></div>
        </div>
     </div>


<div class="col-md-12">
    <div class="card">
        <div class="content table-responsive table-full-width">
            <table id="dependencies-bootstrap-table" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th class="hidden" data-field="id">ID</th>
                        <th class="col-md-1" data-field="dependencyref" data-sortable="true">Ref</th>
                        <th class="col-md-1" data-field="dependencypriority" data-sortable="true">Priority</th>
                        <th class="col-md-6" data-field="dependencydesc" data-sortable="true">Description</th>
                        <th class="col-md-1" data-field="dependencyassignee" data-sortable="true">Assignee</th>
                        <th class="col-md-1" data-field="dependencystatus" data-sortable="true">Status</th>
                        <th class="col-md-2" data-field="stories" data-sortable="true" data-formatter="formatStories">Affected Stories</th>
                        <th class="col-md-1 td-actions text-right" data-field="actions" data-events="operateEvents" data-formatter="operateFormatter">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>